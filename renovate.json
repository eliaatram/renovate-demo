{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "extends": [
    "config:recommended"
  ],

  // â”€â”€ Who to notify â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  // Assign PRs to yourself so they show up in your review queue
  "assignees": ["eliaatram"],

  // Add a label to every Renovate PR â€” makes them easy to filter
  "labels": ["dependencies"],

  // â”€â”€ PR limits â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  // Avoid PR spam: no more than 5 open Renovate PRs at a time
  "prConcurrentLimit": 5,

  // Only open PRs on Monday mornings â€” keeps the rest of the week clean
  "schedule": ["before 6am on Monday"],

  // â”€â”€ Semver strategy â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  // Keep major bumps in their own PR â€” they may have breaking changes
  "separateMajorMinor": true,

  // â”€â”€ Package rules â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  // Rules are evaluated top-to-bottom; first match wins
  "packageRules": [

    // 1. Group all minor + patch updates into ONE PR
    //    â†’ reduces noise, easy to review together
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchDepTypes": ["dependencies"],
      "groupName": "production dependencies (minor + patch)",
      "groupSlug": "prod-minor-patch"
    },

    // 2. Major updates for production deps â†’ individual PR + review label
    //    â†’ students must review changelog before merging
    {
      "matchUpdateTypes": ["major"],
      "matchDepTypes": ["dependencies"],
      "labels": ["dependencies", "major-update"],
      "addLabels": ["needs-review"],
      "prPriority": 5
    },

    // 3. Dev dependencies (minor + patch) â†’ automerge when CI passes
    //    â†’ safe because devDeps don't ship to production
    //    â†’ this is the payoff: CI pipeline from earlier lesson does the work
    {
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "dev dependencies (minor + patch)",
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },

    // 4. TypeScript itself: hold off on major bumps, require manual review
    {
      "matchPackageNames": ["typescript"],
      "matchUpdateTypes": ["major"],
      "enabled": true,
      "addLabels": ["needs-review", "typescript-major"]
    },

    // 5. GitHub Actions versions â€” keep them updated too
    {
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions",
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    }
  ],

  // â”€â”€ Commit message format â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  // Renovate will generate commits that match our conventional commits setup!
  "commitMessagePrefix": "chore(deps):",
  "commitMessageAction": "update",

  // â”€â”€ Dependency Dashboard â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  // Creates a special issue in your repo listing all pending updates
  // You can trigger individual PRs from there by checking a box
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "ðŸ¤– Renovate Dependency Dashboard"
}
